generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  phone     String
  address   String?
  tickets   Ticket[]
  createdAt DateTime @default(now())
}
model GuestUser {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String?
  address   String?
  tickets   Ticket[]
  createdAt DateTime @default(now())
}

model Event {
  id_event            String   @id @default(uuid())
  title         String
  description   String
  date          DateTime
  location      String

  quantity       Int @default(1)
  availableTickets Int

  ticketsSold   Int       @default(0)
  
  tickets       Ticket[]
  priceTickets Typetickets[] @relation("priceTickets")
  
}

enum Tickets{
  vip
  Standard
}
model Typetickets{
  tickets_id String @id @default(uuid())

  price Float
  type Tickets @default(Standard)

  eventId String
  event     Event  @relation("priceTickets",fields: [eventId], references: [id_event])

  typeOfTicket Ticket[] @relation("typeOfTicket")
}
model Ticket {
  id_ticket          String   @id @default(uuid())
  code        String   @unique
  paid        Boolean  @default(false)

  typeticket String
  typeT Typetickets @relation("typeOfTicket",fields: [typeticket],references: [tickets_id])

  userId      String?  
  user        User?    @relation(fields: [userId], references: [id])

  guestId     String?
  guest       GuestUser? @relation(fields: [guestId], references: [id])

  eventId     String
  event       Event    @relation(fields: [eventId], references: [id_event])

  createdAt   DateTime @default(now())
}
